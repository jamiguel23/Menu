@model Menu.Models.Dish
@{
    ViewData["Title"] = "Details";
}


<div class="container">
    <div class="d-flex justify-content-center">
        <h3 class="d-flex justify-content-center">
            @Model.Name
        </h3>

        <div class="d-flex justify-content-center">
            <img src="@Model.ImageUrl" style="width : 50%" />
        </div>
        <div class="d-flex justify-content-center">
            @Model.Price.ToString("N2") Dollars
        </div>
    </div>
</div>